<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>My Meal Prep</title>
        <!-- Favicon-->
        <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="css/styles.css" rel="stylesheet" />
    </head>
    <body>
        <!-- Responsive navbar-->
        <nav class="navbar navbar-dark bg-dark">
            <!-- Wrap navbar in a container -->
            <div class="container">
                <!-- Nav Title/Logo -->
                <div class="nav-header">
                    <a class="navbar-brand" href="#">DWymer</a>
                </div>
                <!-- Main Nav links -->
                <div class="nav-links navbar-expand-lg">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" aria-current="page" href="/">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="/food">Food</a></li>
                        <li class="nav-item"><a class="nav-link" href="/recipes">Recipes</a></li>
                    </ul>
                </div>
                <!-- User specific nav links -->
                <div class="nav-user navbar-expand-lg">
                    <ul class="navbar-nav">
                        <% if (typeof user !== 'undefined') { %>
                            <li class="nav-item"><a class="nav-link" href="/profile">Profile</a></li>
                            <li class="nav-item">
                                <form action="/logout" method="post">
                                    <button class="logout btn btn-dark" type="submit">Sign out</button>
                                </form>
                            </li>
                        <% } else { %>
                            <li class="nav-item"><a class="nav-link active" href="/login">Login</a></li>
                            <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Page content-->
        <div class="container">
            <!--Login-->
            <div class="login text-center mt-5 ">
                <h1>Login</h1>
                <% if (messages.error) { %>
                    <%- messages.error %>
                    <% } %>
                <!-- on submit(pressing login), load /auth and post request to check entered login details -->
                <form action="/login" method="post">
                    <!-- div to combine all Username data -->
                    <div class="username">
                        <label for="username">UserName:</label>
                        <!--Create a New Line-->
                        <br>
                        <!-- W3Schools Note: Only form elements with a name attribute will have their values posted when submitting a form. -->
                        <!-- add required to ensure field cannot be left blank -->
                        <input type="text" name="username" placeholder="Email Address" required>
                    </div>
                    <!-- div to combine all Password data -->
                    <div class="password">
                        <label for="password">Password:</label>
                        <!--Create a New Line-->
                        <br>
                        <!-- W3Schools Note: Only form elements with a name attribute will have their values posted when submitting a form. -->
                        <!-- add required to ensure field cannot be left blank -->
                        <!-- type=password to hide text / can set to text to be visible during testing to see what is being entered-->
                        <input type="text" name="password" placeholder="password" required>
                    </div>
                    <!--Submit Button for logging in-->
                    <input type="submit" value="Login">
                </form>
            </div> 
        </div>
        <!-- Bootstrap CSS only-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
        <!-- Core theme JS-->
        <script src="js/scripts.js"></script>
    </body>
</html>
