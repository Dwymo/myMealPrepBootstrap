        <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="css/styles.css" rel="stylesheet" />
    </head>
    <body>
        <!-- Responsive navbar-->
        <nav class="navbar navbar-dark bg-dark">
            <!-- Wrap navbar in a container -->
            <div class="container">
                <!-- Nav Title/Logo -->
                <div class="nav-header">
                    <a class="navbar-brand" href="#">DWymer</a>
                </div>
                <!-- Main Nav links -->
                <div class="nav-links navbar-expand-lg">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link active" aria-current="page" href="/">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="/food">Food</a></li>
                        <li class="nav-item"><a class="nav-link" href="/recipes">Recipes</a></li>
                    </ul>
                </div>
                <!-- User specific nav links -->
                <div class="nav-user navbar-expand-lg">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" href="/profile">Profile</a></li>
                        <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
                        <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Page content-->
        <div class="container mt-5 col-8">
            <!--Creating a Food Item-->
            <div class="newFoodItem">
                <h1 class="text-center">New Food Item</h1>
                <!-- form for Creating a food Item -->
                <form action="/createFoodItem" method="post">
                    <!-- row for Food: Name, Brand & Store - Each input will be grouped seperatly -->                    
                    <div class="form-group row mt-4">
                        <h2 class="text-center">Food Name</h2>
                        <div class="form-group col-12 col-md-4">
                            <label for="name">Name:</label>
                            <input class="form-control" type="text" name="name" placeholder="Name">
                        </div>
                        <div class="form-group col-12 col-md-4">
                            <label for="brand">Brand (Optional):</label>
                            <input class="form-control" type="text"name="brand" placeholder="Brand">
                        </div>
                        <div class="form-group col-12 col-md-4">
                            <label for="shop">Shop (Optional):</label>
                            <input class="form-control" type="text" name="shop" placeholder="Shop">
                        </div>
                    </div>
                    </br> <!-- Line Break-->
                    <!-- row for Price - Each input will be grouped seperatly -->
                    <div class="form-group row mt-4">
                        <h2 class="text-center">Price (Optional)</h2>
                        <div class="form-group col-2">
                            <label for="name">Â£</label>
                            <input class="form-control" type="number" name="pound" placeholder="0">
                        </div>
                        <div class="form-group col-2">
                            <label for="name">P</label>
                            <input class="form-control" type="number" name="pence" placeholder="0">
                        </div>
                    </div>
                    </br> <!-- Line Break-->
                    <!-- row for Amount & Measurement - Each input will be grouped seperatly -->
                    <div class="form-group row mt-4">
                        <h2 class="text-center">Servings</h2>
                        <div class="form-group col-12 col-md-3">
                            <label for="amount">Serving:</label>
                            <input class="form-control" type="number" name="amount" placeholder="100">
                        </div>
                        <div class="form-group col-12 col-md-3">
                            <label for="measurement">Measurement:</label>
                            <input class="form-control" type="text" name="measurement" placeholder="Grams">
                        </div>
                        <div class="form-group col-12 col-md-3">
                            <label for="measurement">Total Servings:</label>
                            <input class="form-control" type="number" step="0.1" name="servings" placeholder="0">
                        </div>
                    </div>
                    <!-- row for Calories & Macros - Each input will be grouped seperatly -->
                    <div class="form-group row mt-4">
                        <h2 class="text-center">Macro's</h2>
                        <div class="form-group col-12 col-md-3">
                            <label for="calories">Calories:</label>
                            <input class="form-control" type="number" name="calories" placeholder="0">
                        </div>
                        <div class="form-group col-12 col-md-3">
                            <label for="carbohydrates">Carbohydrates:</label>
                            <input class="form-control" type="number" step="0.1" name="carbohydrates" placeholder="0">
                        </div>
                        <div class="form-group col-12 col-md-3">
                            <label for="fat">Fat:</label>
                            <input class="form-control" type="number" step="0.1" name="fat" placeholder="0">
                        </div>
                        <div class="form-group col-12 col-md-3">
                            <label for="protein">Protein:</label>
                            <input class="form-control" type="number" step="0.1" name="protein" placeholder="0">
                        </div>
                    </div>
                    <!-- row for OPTIONAL Nutrition - Each input will be grouped seperatly -->
                    <div class="form-group row mt-4">
                        <h2 class="text-center">Optional Nutrition</h2>
                        <div class="form-group col-12 col-md-3">
                            <label for="saturates">Saturates:</label>
                            <input class="form-control" type="number" step="0.1" name="saturates" placeholder="0">
                        </div>
                        <div class="form-group col-12 col-md-3">
                            <label for="sugars">Sugars:</label>
                            <input class="form-control" type="number" step="0.1" name="sugars" placeholder="0">
                        </div>
                        <div class="form-group col-12 col-md-3">
                            <label for="salt">Salt:</label>
                            <input class="form-control" type="number" step="0.01" name="salt" placeholder="0">
                        </div>
                        <div class="form-group col-12 col-md-3">
                            <label for="fiber">Fiber:</label>
                            <input class="form-control" type="number" step="0.1" name="fiber" placeholder="0">
                        </div>
                        <!-- Users will be unable to decide to make a public/private Food, all created food will be private by default -->
                        <!-- <div class="form-group mt-4">  b v
                            <label for="isPrivate">isPrivate:</label>
                            <input type="checkbox" name="isPrivate">
                            </div> -->
                    </div>
                    <!-- Submit Button for Creating Food Item (added button into a div to help center) -->
                    <div class="button text-center mt-5">
                        <input class="btn btn-primary" type="submit" value="Create Food Item">
                    </div>
                </form>
            </div> 
        </div>
        <!-- Bootstrap CSS only-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
        <!-- Core theme JS-->
        <script src="js/scripts.js"></script>
    </body>
</html>
